.html_page {
  width: 100%;
}
.html_page .html_title_info {
  width: 100%;
  border-bottom: 1px solid #eee;
}
.html_page .html_title_info .html_title {
  padding: 20px 15px 10px 15px;
  font-size: 18px;
  font-weight: 700;
  background-color: #fff;
  line-height: 30px;
}
.html_page .html_title_info .html__post__times__type {
  display: flex;
  padding: 5px;
  padding-left: 10px;
  width: 50%;
  justify-content: space-between;
  align-items: center;
}
.html_page .html_title_info .html__post__times__type .html__post__times {
  color: #999;
}
.html_page .html_title_info .html__post__times__type .html__post__type {
  color: #0081ff;
}
.html_page .html_user__info {
  width: 100%;
  height: 120rpx;
  padding-left: 20px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.02);
}
.html_page .html_user__info .html__user {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.html_page .html_user__info .html__user .left {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
}
.html_page .html_user__info .html__user .left .user-icon {
  width: 50px;
  height: 50px;
}
.html_page .html_user__info .html__user .center {
  margin-left: 20px;
}
.html_page .html_user__info .html__user .center .username {
  font-size: 15px;
  color: #8799a3;
}
.html_page .html_user__info .html__user .center .user-personSignature {
  color: #aaa;
}
.html_page .html_body {
  border-bottom: 1px solid #eee;
}
.html_page .tags {
  padding: 0px;
  border-top: 1px solid #f9f9f9;
  padding-top: 15px;
}
.html_page .tags .tags-box {
  padding: 6px 12px;
  line-height: 20px;
  text-align: center;
  color: #0081ff;
  border: none;
  background-color: rgba(0, 129, 255, 0.2);
  width: auto;
  margin: 5px;
  border-radius: 15px;
  float: left;
  font-size: 12px;
  opacity: 0.9;
}