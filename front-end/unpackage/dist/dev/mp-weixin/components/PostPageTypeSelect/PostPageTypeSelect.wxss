.select_type_model {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
}
.select_type_model .bg_mask {
  position: absolute;
  z-index: 9;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
}
.select_type_model .select_model {
  z-index: 10;
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.select_type_model .select_model .model_title {
  margin: 15rpx;
  font-size: 24rpx;
}
.select_type_model .select_model .search_type {
  width: 90%;
}
.select_type_model .select_model .type_list_items {
  margin-top: 18rpx;
  width: 95%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.select_type_model .select_model .type_list_items .type_item {
  font-size: 24rpx;
  border-radius: 20px;
  height: 26rpx;
  border: 1px solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
  margin: 15rpx;
}
.select_type_model .select_model .selected_type_area {
  width: 90%;
}
.select_type_model .select_model .selected_type_area .tips {
  font-size: 24rpx;
}
.select_type_model .select_model .selected_type_area .select_warp {
  width: -webkit-fit-content;
  width: fit-content;
  height: auto;
  border-radius: 20px;
  border: 1px solid #eee;
  display: flex;
  transition: 0.3s all;
}
.select_type_model .select_model .selected_type_area .select_warp .select_type_item {
  width: -webkit-fit-content;
  width: fit-content;
  font-size: 24rpx;
  border-radius: 20px;
  height: 26rpx;
  border: 1px solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
  margin: 5rpx;
}